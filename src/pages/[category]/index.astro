---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { autodeskProducts, slugify } from '../../products/autodesk.js';
import Hero from '../../components/landingpage/Hero.astro';

export async function getStaticPaths() {
  const categories = [...new Set(autodeskProducts.map(product => product.category))];
  return categories.map(category => {
    return {
      params: { category },
      props: { 
        category,
        products: autodeskProducts.filter(product => product.category === category)
      }
    };
  });
}

const { category, products } = Astro.props;
const softwareNames = products.map(product => product.name).join(', ');
