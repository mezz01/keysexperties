---
import Layout from '../../layouts/Layout.astro';
import { autodeskProducts, slugify } from '../../products/autodesk.js'; // Adjust path if needed
import { marked } from 'marked';
import Form from '../../components/Form.jsx'; // Import the React component

export async function getStaticPaths() {
  return autodeskProducts.map(product => ({
    params: { 
      category: product.category,
      product: slugify(product.name),
    },
    props: { product }
  }));
}

const { product } = Astro.props;

const originalOneYearPrice = product.prices.oneYear ? (product.prices.oneYear / (1 - product.discount/100)) : 0;
const originalThreeYearsPrice = product.prices.threeYears ? (product.prices.threeYears / (1 - product.discount/100)) : 0;

const htmlContent = marked(product.description);

// --- IMPORTANT ---
// ** REPLACE THIS WITH YOUR ACTUAL FORMSUBMIT EMAIL ADDRESS **
const yourFormSubmitEmail = "medmezzat1964@gmail.com"; 
// -----------------
---

<Layout 
  title={`Buy ${product.title} License Key | ${product.discount}% Off | Instant Delivery | genuine-keys.com`} 
  description={`Official ${product.title} license key. Save ${product.discount}% vs retail. Authentic digital activation code. Instant delivery & 24/7 support included.`}
>
  <section class="flex flex-col lg:flex-row bg-cyan-200/30 mx-4 md:mx-8 lg:mx-24 my-8 lg:my-12 min-h-[50vh] gap-8 lg:gap-16 items-center justify-between p-6 md:p-12 lg:p-16 rounded-t-2xl">
    <div class="w-full lg:max-w-[60%] grid h-full relative">
      <div class="flex items-center mb-4">
        <span class="bg-cyan-500 text-white px-6 py-3 rounded-full text-sm font-medium inline-flex items-center">
          {product.discount}% OFF
          <span class="relative ml-2">
            <span class="absolute inline-flex h-3 w-3 rounded-full bg-white opacity-75 animate-ping"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
          </span>
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-wide">
        {product.title} <br /> {product.version} License
      </h1>
      <p class="mt-6 lg:mt-10 text-lg md:text-xl max-w-full lg:max-w-[80%] font-light">
        Genuine {product.title} license key with instant delivery. Save {product.discount}% off retail price with our official {product.activationType}.
      </p>

      <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
        {product.prices.oneYear && (
          <button 
            type="button" 
            class="flex items-center justify-between bg-white hover:bg-cyan-50 border border-cyan-200 rounded-lg p-4 transition-all shadow-sm hover:shadow-md text-left cursor-pointer"
            onclick={`window.triggerPurchaseForm && window.triggerPurchaseForm('${product.title} (1 Year)', '${product.prices.oneYear.toFixed(2)}')`}
          >
            <div>
              <div class="font-medium">Get Your License</div>
              <div class="flex items-center">
                <span class="text-gray-400 line-through text-sm">${originalOneYearPrice.toFixed(2)}</span>
                <span class="text-xl font-bold text-cyan-600 ml-2">${product.prices.oneYear.toFixed(2)}</span>
              </div>
            </div>
            <div class="bg-cyan-600 text-white p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
            </div>
          </button>
        )}
        
        {product.prices.threeYears && (
          <button 
            type="button" 
            class="flex items-center justify-between bg-gradient-to-r from-cyan-50 to-cyan-100 border border-cyan-200 rounded-lg p-4 transition-all shadow-md hover:shadow-lg relative text-left cursor-pointer"
            onclick={`window.triggerPurchaseForm && window.triggerPurchaseForm('${product.title} (3 Years)', '${product.prices.threeYears.toFixed(2)}')`}
          >
            <div class="absolute -top-2 left-4 bg-cyan-600 text-white px-2 py-0.5 rounded-full text-xs font-medium">Best Value</div>
            <div>
              <div class="font-medium">3 Year License</div>
              <div class="flex items-center">
                <span class="text-gray-400 line-through text-sm">${originalThreeYearsPrice.toFixed(2)}</span>
                <span class="text-xl font-bold text-cyan-600 ml-2">${product.prices.threeYears.toFixed(2)}</span>
              </div>
            </div>
             <div class="bg-cyan-600 text-white p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
            </div>
          </button>
        )}
        
        {product.prices.lifetime != null && (
          <button 
            type="button" 
            class="flex items-center justify-between bg-white hover:bg-cyan-50 border border-cyan-200 rounded-lg p-4 transition-all shadow-sm hover:shadow-md col-span-1 sm:col-span-2 text-left cursor-pointer"
            onclick={`window.triggerPurchaseForm && window.triggerPurchaseForm('${product.title} (Lifetime)', '${product.prices.lifetime.toFixed(2)}')`}
          >
            <div>
              <div class="font-medium">Lifetime License</div>
              <div class="flex items-center">
                <span class="text-xl font-bold text-cyan-600">${product.prices.lifetime.toFixed(2)}</span>
                <span class="text-gray-600 ml-2 text-sm">One-time payment</span>
              </div>
            </div>
             <div class="bg-cyan-600 text-white p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
            </div>
          </button>
        )}
      </div>
    </div>
    
    <div class="w-full lg:w-auto mt-6 lg:mt-0">
      <img src={product.image} alt={product.title} class="w-full h-auto object-cover rounded-xl shadow-lg"/>
    </div>
  </section>

  <section class="mx-4 md:mx-8 lg:mx-24 my-16">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-6 md:p-10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">Product Details</h2>
        <div class="prose prose-lg max-w-none">
          {htmlContent && <div set:html={htmlContent} />}
        </div>
      </div>
    </div>
  </section>

  <section class="bg-gradient-to-b from-cyan-50 to-white py-16 px-4 md:px-8 lg:px-16">
    </section>
  <section class="mx-4 md:mx-8 lg:mx-24 my-16">
    </section>
  <section class="bg-cyan-50 py-16 px-4 md:px-8 lg:px-16">
    </section>

  <section class="mx-4 md:mx-8 lg:mx-24 my-16">
    <div class="bg-gradient-to-r from-cyan-600 to-cyan-800 rounded-xl shadow-xl overflow-hidden">
      <div class="p-8 md:p-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Save on {product.title}?</h2>
        <p class="text-white text-lg mb-8 max-w-2xl mx-auto">Get your genuine {product.title} license key now and save up to {product.discount}% off retail price. Instant delivery and complete peace of mind.</p>
        <button 
          type="button" 
          class="inline-flex items-center justify-center bg-white hover:bg-gray-100 text-cyan-700 font-bold py-3 px-8 rounded-xl transition-all shadow-lg hover:shadow-xl cursor-pointer"
          onclick={`window.triggerPurchaseForm && window.triggerPurchaseForm('${product.title}', '${product.prices.oneYear ? product.prices.oneYear.toFixed(2) : (product.prices.lifetime ? product.prices.lifetime.toFixed(2) : '0.00')}')`}
        >
          Buy Now
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
        </button>
      </div>
    </div>
  </section>

  {/* Render the React Form component. It will be initially hidden. */}
  {/* client:visible or client:load will hydrate the component and run its useEffect to define window.triggerPurchaseForm */}
  <Form client:load yourEmail={yourFormSubmitEmail} />
</Layout>

